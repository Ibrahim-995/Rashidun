<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpic"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="  الخلفاء الراشدون "
        android:textColor="#c48a17"
        android:textSize="50dp"
        android:textStyle="italic">

    </TextView>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:onClick="abubakar"
            android:text="✤ হযরত আবু বকর সিদ্দীক (রাঃ)"
            android:textColor="#c48a17"
            android:textSize="17dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:onClick="umorebnul"
            android:text="✤ হযরত উমর ইবনুল খাত্তাব (রাঃ)"
            android:textColor="#c48a17"
            android:textSize="17dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:onClick="usmanibn"
            android:text="✤ হযরত উসমান ইবনে আফফান (রাঃ)"
            android:textColor="#c48a17"
            android:textSize="17dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:onClick="aliibn"
            android:text="✤ হযরত আলী ইবনে আবী তালিব (রাঃ)"
            android:textColor="#c48a17"
            android:textSize="17dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/abt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:onClick="abt"
            android:text="About"
            android:textColor="#c48a17"
            android:textSize="13dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>




</LinearLayout>